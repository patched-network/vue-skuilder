{
    "name": "@vue-skuilder/cli",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.1.7",
    "type": "module",
    "description": "CLI scaffolding tool for vue-skuilder projects",
    "bin": {
        "skuilder": "./dist/cli.js"
    },
    "main": "dist/cli.js",
    "types": "dist/cli.d.ts",
    "exports": {
        ".": {
            "types": "./dist/cli.d.ts",
            "import": "./dist/cli.js"
        }
    },
    "scripts": {
        "build": "rm -rf dist && npm run build:studio-ui && tsc && npm run embed:studio-ui",
        "build:studio-ui": "cd ../studio-ui && npm run build",
        "embed:studio-ui": "mkdir -p dist/studio-ui-assets && cp -r ../studio-ui/dist/* dist/studio-ui-assets/",
        "dev": "tsc --watch",
        "lint": "npx eslint .",
        "lint:fix": "npx eslint . --fix",
        "lint:check": "npx eslint . --max-warnings 0"
    },
    "keywords": [
        "cli",
        "scaffolding",
        "vue",
        "skuilder",
        "education",
        "course"
    ],
    "dependencies": {
        "@vue-skuilder/db": "workspace:*",
        "@vue-skuilder/standalone-ui": "^0.1.7",
        "chalk": "^5.3.0",
        "commander": "^11.0.0",
        "fs-extra": "^11.2.0",
        "inquirer": "^9.2.0",
        "pouchdb": "^9.0.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.0",
        "@types/inquirer": "^9.0.0",
        "@types/node": "^20.0.0",
        "@vue-skuilder/studio-ui": "workspace:*",
        "typescript": "~5.8.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "yarn@4.6.0"
}
